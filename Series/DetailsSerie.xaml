<Page
    x:Class="Series.DetailsSerie"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Series"
    xmlns:binding="using:Series.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="1382" Height="830">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="TitrePage" Text="Titre"  HorizontalAlignment="Center" Height="59" Margin="368,10,484,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="648" FontSize="48" TextAlignment="Center"/>
        <Button x:Name="BouttonRetour" Content="Précédent" Click="ClickBouttonRetour" HorizontalAlignment="Left" Height="40" Margin="40,40,0,0" VerticalAlignment="Top" Width="85"/>
        <Button x:Name="BouttonAccueil" Content="Accueil" Click="ClickBouttonAccueil" HorizontalAlignment="Left" Height="40" Margin="130,40,0,0" VerticalAlignment="Top" Width="85"/>
        <Image x:Name="PhotoPage" Source="{x:Bind Image_Url}" HorizontalAlignment="Left" Height="151" Margin="253,81,0,0" VerticalAlignment="Top" Width="115"/>
        <TextBox x:Name="Resume" Height="142" Margin="417,90,0,0" TextWrapping="Wrap" Text="Résumé" VerticalAlignment="Top" HorizontalAlignment="Left" Width="575"/>
        <Button x:Name="AjoutFavoris" Content="Ajouter aux favoris" Click="ClickAjoutFavoris" HorizontalAlignment="Left" Height="40" Margin="40,90,0,0" VerticalAlignment="Top" Width="175" Background="#338B2F04"/>
        <Button x:Name="RetraitFavoris" Content="Retirer des favoris" Click="ClickRetraitFavoris" HorizontalAlignment="Left" Height="40" Margin="40,90,0,0" VerticalAlignment="Top" Width="175" Background="#338B2F04"/>
        <ListView x:Name="ListeActeurs" HorizontalAlignment="Left" Height="706" Margin="1059,90,0,0" VerticalAlignment="Top" Width="305" SelectionChanged="SelectionActeur">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="47"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Image Source="{Binding Character.image.medium}" Height="70"></Image>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding Person.name}"
                           Margin="20,0,20,8"
                           FontSize="20"  
                           FontWeight="SemiBold"
                           Foreground="DarkBlue"/>
                            <TextBlock Text="{Binding Character.name}" 
                           Margin="40,0,20,8"
                           FontSize="18"
                           Foreground="#FF4D1818" 
                           Opacity="1" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView Height="100" Width="100"/>
        </ListView>
        <ListView x:Name="AffichageListeSaisons" HorizontalAlignment="Left" Height="472" Margin="40,324,0,0" VerticalAlignment="Top" Width="175" SelectionChanged="SelectionSaison">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Saison"
                           Margin="10,0,6,8"
                           FontSize="20"  
                           FontWeight="SemiBold"
                           Foreground="DarkRed"/>
                            <TextBlock Text="{Binding number}"
                           Margin="0,0,20,8"
                           FontSize="20"  
                           FontWeight="SemiBold"
                           Foreground="DarkRed"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding premiereDate}" 
                           Margin="0,0,20,8"
                           FontSize="12"
                           Foreground="#FF4D1818" 
                           Opacity="1" />
                            <TextBlock Text="{Binding endDate}" 
                           Margin="10,0,20,8"
                           FontSize="12"
                           Foreground="#FF4D1818" 
                           Opacity="1" />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView Height="100" Width="100"/>
        </ListView>
        <ListView x:Name="AffichageListeEpisodes" 
                  HorizontalAlignment="Left" 
                  ItemsSource="{x:Bind ListeEpisode}"
                  Height="472"
                  Margin="253,324,0,0" 
                  VerticalAlignment="Top" 
                  Width="140" SelectionChanged="AffichageListeEpisodes_SelectionChanged" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Episode"
                                Margin="10,0,6,8"
                                FontSize="20"  
                                FontWeight="SemiBold"
                                Foreground="DarkRed"/>
                            <TextBlock Text="{Binding number}"
                                Margin="0,0,20,8"
                                FontSize="20"  
                                FontWeight="SemiBold"
                                Foreground="DarkRed"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView Height="100" Width="100"/>
        </ListView>
        <ListView x:Name="DetailsEpisode" 
              HorizontalAlignment="Left" 
              ItemsSource="{x:Bind EpisodeAAfficher}"
              Height="472"
              VerticalAlignment="Top" 
              Width="504" 
              Margin="488,324,0,0">
            <DataTemplate x:DataType="binding:Episode">
                <StackPanel>
                    <TextBlock Text="{Binding name}"
                                    Margin="0,0,0,8"
                                    FontSize="30"  
                                    FontWeight="SemiBold"
                                    Foreground="Black"/>
                    <TextBlock Text="{Binding summary}"
                                    Margin="20,20,20,8"
                                    FontSize="12"  
                                    FontWeight="SemiBold"
                                    Foreground="Black"/>
                </StackPanel>
            </DataTemplate>
        </ListView>
    </Grid>
</Page>
